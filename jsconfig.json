{
  "compilerOptions": {
    "module": "ES6",
    "target": "ESNext",
    "moduleResolution": "Node",
    // "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src"],
      "@actor/*": ["./src/actor/*"],
      "@item/*": ["./src/item/*"],
      "@system/*": ["./src/system/*"],
      "@utils/*": ["./src/utils/*"],
      "@components/*": ["./src/components/*"],
    }
  },
  "include": ["src/**/*.js"],
  "exclude": ["node_modules/*", "dist/*"]
}
