<div class="bio-tab container">
	<div class="boxed-property bio-notes">
		<h3>{{localize "FLBR.HEADER.Notes"}}</h3>
		<div class="bio-editor">
			{{editor content=system.description target="system.description" owner=owner button=true editable=editable}}
		</div>
	</div>
	{{#if system.bio}}
		<div class="boxed-property years-on-the-force">
			<h3>{{localize "FLBR.HEADER.YearsOnTheForce"}}</h3>
			<input type="text" name="system.bio.yearsOnTheForce" value="{{system.bio.yearsOnTheForce}}" data-dtype="Number"/>
		</div>
		<div class="boxed-property">
			<h3>{{localize "FLBR.HEADER.Appearance"}}</h3>
			<div class="bio-editor">
				{{editor content=system.bio.appearance target="system.bio.appearance" owner=owner button=true editable=editable}}
			</div>
		</div>
		<div class="boxed-property">
			<h3>{{localize "FLBR.HEADER.KeyMemory"}}</h3>
			<div class="bio-editor">
				{{editor content=system.bio.keyMemory target="system.bio.keyMemory" owner=owner button=true editable=editable}}
			</div>
		</div>
		<div class="boxed-property">
			<h3>{{localize "FLBR.HEADER.KeyRelationship"}}</h3>
			<div class="bio-editor">
				{{editor content=system.bio.keyRelationship target="system.bio.keyRelationship" owner=owner button=true editable=editable}}
			</div>
		</div>
		<div class="boxed-property">
			<h3>{{localize "FLBR.HEADER.Home"}}</h3>
			<div class="bio-editor">
				{{editor content=system.bio.home target="system.bio.home" owner=owner button=true editable=editable}}
			</div>
		</div>
	{{/if}}
</div>
