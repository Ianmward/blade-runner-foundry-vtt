{
  "compilerOptions": {
    "module": "ES6",
    "target": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "*": ["./src"],
      "@lib/*": ["./static/lib/*"],
      "@actor/*": ["./src/actor/*"],
      "@item/*": ["./src/item/*"],
      "@system/*": ["./src/system/*"],
    }
  },
  "include": ["src/**/*.js"],
  "exclude": ["node_modules/*", "dist/*"]
}
